@model MVCBasico.Models.Turno

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                <option selected="selected" value="">Seleccionar</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicio" class="control-label"></label>
                <select asp-for="Servicio" class="form-control" asp-items="Html.GetEnumSelectList<Servicio>()">
                <option selected="selected" value="">Seleccionar</option>
                </select>
                <span asp-validation-for="Servicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInscripto" class="control-label"></label>
                <input asp-for="FechaInscripto" class="form-control" />
                <span asp-validation-for="FechaInscripto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeluqueroId" class="control-label"></label>
                <select asp-for="PeluqueroId" class="form-control" asp-items="ViewBag.PeluqueroId">
                <option selected="selected" value="">Seleccionar</option>
                </select>
                <span asp-validation-for="PeluqueroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
